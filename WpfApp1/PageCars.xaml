<Page x:Class="WpfApp1.PageCars"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageCars">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="TextBox1" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="10,0,10,0"/>
        <TextBox x:Name="TextBox2" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="10,0,10,0"/>

        <Button Grid.Row="2" Grid.Column="1" Content="Добавить" Margin="10,10,10,10" FontSize="30" Click="Button_Click"/>
        <Button Grid.Row="3" Grid.Column="1" Content="Изменить" Margin="10,10,10,10" FontSize="30" Click="Button_Click_2"/>
        <Button Grid.Row="4" Grid.Column="1" Content="Удалить" Margin="10,10,10,10" FontSize="30" Click="Button_Click_1"/>

        <DataGrid x:Name="CarsDG" Grid.Row="0" Grid.Column="0" Grid.RowSpan="5" SelectionChanged="CarsDG_SelectionChanged"/>
    </Grid>
</Page>
